<h1>Update Traveler</h1>

<form action="/travelers/<%=@traveler.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>
  <br>
  <input type="text" name="traveler[first_name]" id="traveler_first_name" value="<%=@traveler.first_name%>">
  <input type="text" name="traveler[last_name]" id="traveler_last_name" value="<%=@traveler.last_name%>">
  <br>
  <label>DOB:</label>
  <input type="text" name="traveler[dob]" id="traveler_dob" value="<%=@traveler.dob%>">
  <label>Home Airport:</label>
  <input type="text" name="traveler[home_airport]" id="traveler_home_airport" value="<%=@traveler.home_airport%>">
  <br>
  <label>Address:</label>
  <input type="text" name="traveler[street_address]" id="traveler_street_address" value="<%=@traveler.street_address%>">
  <br>
  <input type="text" name="traveler[city]" id="traveler_city" value="<%=@traveler.city%>">
  <input type="text" name="traveler[state]" id="traveler_state" value="<%=@traveler.state%>">
  <input type="text" name="traveler[zip]" id="traveler_zip" value="<%=@traveler.zip%>">
  <br>

  <label>Choose an existing trip:</label>

  <br>

  <%@traveler.trips.each do |trip|%>
    <input type="checkbox" name="traveler[trip_ids][]" id="<%= trip.id%>" value="<%=trip.id%>" <%='checked' if @traveler.trips.include?(trip) %>><%=trip.name%></input>
  <%end%>

  <br>

  <label>and/or, create a new trip:</label>
  <br>
  <label>name:</label>
    <input  type="text" name="trip[name]" id="trip_name"></input>
    <a href="/trips/edit">Edit</a>
  <br>
  <input type="submit" value="Update Traveler">
</form>
